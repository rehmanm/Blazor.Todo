@inherits LayoutComponentBase

<div class="@(_darkMode ? "dark" : null)">
    <div class="bg-gray-100 dark:bg-zinc-900 transition-all duration-700 dark:text-white">
        <Header OnDarkModeToggled="@HandleDarkModeToggled" />
        <div className="max-w-6xl mx-auto">
            @Body
        </div>
    </div>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code
{
    private bool _darkMode = false;

    private void HandleDarkModeToggled(bool isDarkMode)
    {
        _darkMode = isDarkMode;
    }
}